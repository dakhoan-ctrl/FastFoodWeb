@model IEnumerable<FastFoodWeb.Models.Product>

@{
    ViewData["Title"] = "Thực đơn";
}

<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/OwlCarousel2/2.3.4/assets/owl.carousel.min.css">

<div id="custom-toast" class="toast-notification">
    <div class="toast-content">
        <div class="toast-icon">
            <i class="fas fa-check-circle"></i>
        </div>
        <div class="toast-message">
            <span class="fw-bold">Thành công!</span>
            <small>Đã thêm món vào giỏ hàng</small>
        </div>
    </div>
</div>

<div class="carousel-wrapper bs-style-controls">
    <div class="owl-carousel owl-theme" id="homeCarouselOwl">
        <div class="item"><img src="~/images/products/banner3.jpg" alt="Banner 1"></div>
        <div class="item"><img src="~/images/products/banner4.jpg" alt="Banner 2"></div>
        <div class="item"><img src="~/images/products/banner3.jpg" alt="Banner 3"></div>
        <div class="item"><img src="~/images/products/banner4.jpg" alt="Banner 4"></div>
    </div>
</div>

<div class="delivery-bar-container">
    <div class="container">
        <div class="delivery-bar shadow">
            <div class="delivery-tabs">
                <button class="active">GIAO HÀNG TẬN NƠI</button>
                <button>ĐẶT ĐẾN LẤY</button>
            </div>
            <form asp-action="Index" method="get" class="delivery-form">
                <div class="input-group">
                    <input type="text" name="searchString" class="form-control border-0" placeholder="Nhập địa chỉ hoặc tên món..." value="@ViewBag.CurrentSearch">
                    <button class="btn btn-danger" type="submit"><i class="fas fa-search"></i></button>
                </div>
            </form>
        </div>
    </div>
</div>

<div class="container py-5">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h3 class="fw-bold text-danger section-title">ĂN GÌ HÔM NAY</h3>

        <div class="container mt-4 mb-5">
            <div class="bg-white p-3 rounded-4 shadow-sm border category-horizontal-bar">
                <div class="d-flex flex-wrap justify-content-center align-items-center gap-2">
                    <span class="fw-bold text-dark me-2 d-none d-md-inline-block"><i class="fas fa-list"></i> Danh mục:</span>

                    <a href="/?categoryId=" class="btn btn-outline-danger border-0 rounded-pill px-3 py-2 fw-bold @(Context.Request.Query["categoryId"].Count == 0 ? "active text-white bg-danger" : "text-muted")">
                        <i class="fas fa-utensils me-1"></i> Tất cả
                    </a>

                    @if (ViewBag.Categories != null)
                    {
                        foreach (var cat in ViewBag.Categories as List<FastFoodWeb.Models.Category>)
                        {
                            // Kiểm tra danh mục nào đang được chọn để tô màu
                            bool isActive = Context.Request.Query["categoryId"] == cat.CategoryId.ToString();

                            // Lấy icon, nếu chưa có thì dùng icon mặc định
                            string iconClass = !string.IsNullOrEmpty(cat.Icon) ? cat.Icon : "fas fa-utensils";

                            <a href="/?categoryId=@cat.CategoryId"
                               class="btn btn-outline-danger border-0 rounded-pill px-3 py-2 fw-bold @(isActive ? "active text-white bg-danger" : "text-muted")">
                                <i class="@iconClass me-1"></i> @cat.Name
                            </a>
                        }
                    }
                </div>
            </div>
        </div>

        @if (!string.IsNullOrEmpty(ViewBag.CurrentSearch))
        {
            <a asp-action="Index" class="btn btn-sm btn-outline-secondary rounded-pill"><i class="fas fa-times"></i> Xóa tìm kiếm: "@ViewBag.CurrentSearch"</a>
        }
    </div>

    <div class="row row-cols-2 row-cols-md-3 row-cols-lg-4 g-4">
        @if (Model != null && Model.Any())
        {
            int count = 0;
            foreach (var item in Model)
            {
                <div class="col">
                    <div class="card h-100 border-0 shadow-sm product-card">
                        <div class="position-relative">
                            @if (count < 4)
                            {
                                <div class="badge-favorite"><i class="fas fa-heart"></i> Yêu thích</div>
                            }
                            <img src="@item.ImageUrl" class="card-img-top" alt="@item.Name" onerror="this.src='/images/no-image.png'">
                        </div>

                        <div class="card-body p-3">
                            <h6 class="card-title fw-bold text-dark mb-1" style="height: 40px; overflow: hidden;">@item.Name</h6>
                            <div class="d-flex align-items-center mb-2">
                                <small class="text-warning"><i class="fas fa-star"></i> 5.0</small>
                                <small class="text-muted ms-2" style="font-size: 12px;">(99+ đánh giá)</small>
                            </div>

                            <div class="mt-3">
                                <div class="mb-2">
                                    <span class="text-danger fw-bold fs-5">@item.Price.ToString("N0")đ</span>
                                </div>
                                <div class="d-flex gap-2">
                                    <a href="javascript:void(0);"
                                       onclick="addToCartAjax(@item.ProductId)"
                                       class="btn btn-outline-danger flex-shrink-0 shadow-sm"
                                       title="Thêm vào giỏ hàng"
                                       style="border-radius: 50%; width: 40px; height: 40px; display: flex; align-items: center; justify-content: center;">
                                        <i class="fas fa-cart-plus"></i>
                                    </a>

                                    <a asp-controller="Cart" asp-action="BuyNow" asp-route-id="@item.ProductId"
                                       class="btn btn-add-cart rounded-pill shadow-sm w-100">
                                        Mua ngay
                                    </a>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                count++;
            }
        }
        else
        {
            <div class="col-12 text-center py-5">
                <img src="https://cdn-icons-png.flaticon.com/512/6134/6134065.png" width="80" class="mb-3 opacity-50">
                <p class="text-muted">Không tìm thấy món ăn nào!</p>
                <a asp-action="Index" class="btn btn-outline-danger btn-sm rounded-pill">Xem tất cả</a>
            </div>
        }
    </div>
</div>

@section Scripts {
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/OwlCarousel2/2.3.4/owl.carousel.min.js"></script>

    <script>
        $(document).ready(function(){
            // Banner chạy
            $('#homeCarouselOwl').owlCarousel({
                loop: true, margin: 0, nav: true, dots: true, autoplay: true,
                autoplayTimeout: 4000, smartSpeed: 800, items: 1, navText: ["",""]
            });
        });

        // === 2. HÀM JS XỬ LÝ THÊM GIỎ HÀNG (KHÔNG DÙNG LIBRARY NGOÀI) ===
        function addToCartAjax(productId) {
            $.ajax({
                url: '/Cart/AddToCart', // Gọi về server
                type: 'GET',
                data: { id: productId },
                success: function (response) {
                    // A. Hiển thị thông báo tự chế
                    showCustomToast();

                    // B. Cập nhật số lượng trên Header
                    var badge = document.getElementById('cartCountBadge');
                    if(badge) {
                        var currentCount = parseInt(badge.innerText);
                        badge.innerText = currentCount + 1; // Cộng thêm 1

                        // Hiệu ứng nảy số
                        badge.style.transform = "scale(1.5)";
                        setTimeout(() => badge.style.transform = "translate(-50%, -50%) scale(1)", 200);
                    }
                },
                error: function () {
                    alert("Có lỗi xảy ra khi thêm vào giỏ hàng!");
                }
            });
        }

        // Hàm điều khiển hiển thị Toast
        function showCustomToast() {
            var toast = document.getElementById("custom-toast");
            toast.className = "toast-notification show"; // Hiện lên

            // Sau 2.5 giây thì ẩn đi
            setTimeout(function(){
                toast.className = toast.className.replace("show", "");
            }, 2500);
        }
    </script>

    <style>
        /* === 3. CSS CHO THÔNG BÁO TỰ CHẾ (CUSTOM TOAST) === */
        .toast-notification {
            visibility: hidden; /* Mặc định ẩn */
            min-width: 300px;
            background-color: #fff; /* Nền trắng */
            color: #333;
            text-align: left;
            border-radius: 10px;
            padding: 15px 20px;
            position: fixed;
            z-index: 9999; /* Luôn nổi lên trên cùng */
            left: 50%;
            top: 30px; /* Cách mép trên 30px */
            transform: translateX(-50%); /* Căn giữa màn hình */
            box-shadow: 0 5px 15px rgba(0,0,0,0.2); /* Đổ bóng mờ */
            border-left: 5px solid #28a745; /* Viền trái màu xanh lá */
            display: flex;
            align-items: center;
            opacity: 0;
            transition: opacity 0.5s, top 0.5s;
        }

            /* Khi có class 'show' thì hiện lên */
            .toast-notification.show {
                visibility: visible;
                opacity: 1;
                top: 50px; /* Trượt nhẹ xuống */
            }

        .toast-content {
            display: flex;
            align-items: center;
            gap: 15px;
        }

        .toast-icon {
            font-size: 24px;
            color: #28a745; /* Icon màu xanh */
        }

        .toast-message {
            display: flex;
            flex-direction: column;
        }

        /* --- CSS CŨ (Banner, Sản phẩm...) --- */
        #homeCarouselOwl .item img {
            display: block;
            width: 100%;
            height: 500px;
            object-fit: fill;
        }

        .bs-style-controls .owl-nav {
            position: absolute;
            top: 0;
            left: 0;
            right: 0;
            bottom: 0;
            display: flex;
            align-items: center;
            justify-content: space-between;
            pointer-events: none;
            z-index: 10;
            margin: 0 !important;
        }

            .bs-style-controls .owl-nav .owl-prev, .bs-style-controls .owl-nav .owl-next {
                pointer-events: auto;
                background: none !important;
                border: none;
                color: #fff;
                font-size: 0;
                opacity: 0.5;
                transition: opacity 0.15s ease;
                width: 15%;
                height: 100%;
                margin: 0 !important;
                padding: 0 !important;
                display: flex;
                align-items: center;
                justify-content: center;
            }

                .bs-style-controls .owl-nav .owl-prev:hover, .bs-style-controls .owl-nav .owl-next:hover {
                    opacity: 1;
                }

                .bs-style-controls .owl-nav .owl-prev::after, .bs-style-controls .owl-nav .owl-next::after {
                    content: "";
                    display: inline-block;
                    width: 2rem;
                    height: 2rem;
                    background-repeat: no-repeat;
                    background-position: center;
                    background-size: 100% 100%;
                }

                .bs-style-controls .owl-nav .owl-prev::after {
                    background-image: url("data:image/svg+xml,%3csvg xmlns='http://www.w3.org/2000/svg' viewBox='0 0 16 16' fill='%23fff'%3e%3cpath d='M11.354 1.646a.5.5 0 0 1 0 .708L5.707 8l5.647 5.646a.5.5 0 0 1-.708.708l-6-6a.5.5 0 0 1 0-.708l6-6a.5.5 0 0 1 .708 0z'/%3e%3c/svg%3e");
                }

                .bs-style-controls .owl-nav .owl-next::after {
                    background-image: url("data:image/svg+xml,%3csvg xmlns='http://www.w3.org/2000/svg' viewBox='0 0 16 16' fill='%23fff'%3e%3cpath d='M4.646 1.646a.5.5 0 0 1 0 .708l6 6a.5.5 0 0 1 0 .708l-6 6a.5.5 0 0 1-.708-.708L10.293 8 4.646 2.354a.5.5 0 0 1 0-.708z'/%3e%3c/svg%3e");
                }

        .bs-style-controls .owl-dots {
            position: absolute;
            bottom: 0;
            left: 50%;
            transform: translateX(-50%);
            z-index: 15;
            margin-bottom: 1rem !important;
            display: flex;
            justify-content: center;
            padding: 0;
            list-style: none;
        }

            .bs-style-controls .owl-dots .owl-dot {
                background: none !important;
                border: none;
                padding: 0 !important;
            }

                .bs-style-controls .owl-dots .owl-dot span {
                    width: 30px;
                    height: 3px;
                    margin: 0 3px;
                    background-color: #fff !important;
                    border-top: 10px solid transparent;
                    border-bottom: 10px solid transparent;
                    opacity: 0.5;
                    transition: opacity 0.6s ease;
                }

                .bs-style-controls .owl-dots .owl-dot.active span {
                    opacity: 1;
                }

        .container.py-5 {
            padding-top: 0 !important;
        }

        .d-flex.justify-content-between.align-items-center.mb-4 {
            margin-bottom: 0 !important;
        }

        .delivery-bar-container {
            margin-top: -10px;
            position: relative;
            z-index: 10;
            padding-bottom: 20px;
        }

        .delivery-bar {
            background: #fff;
            border-radius: 50px;
            padding: 10px;
            display: flex;
            align-items: center;
            max-width: 800px;
            margin: 0 auto;
        }

        .delivery-tabs {
            background: #f0f0f0;
            border-radius: 30px;
            padding: 5px;
            display: flex;
            margin-right: 15px;
        }

            .delivery-tabs button {
                border: none;
                background: transparent;
                padding: 8px 20px;
                border-radius: 25px;
                font-weight: bold;
                font-size: 0.85rem;
                color: #555;
                transition: 0.3s;
            }

                .delivery-tabs button.active {
                    background: white;
                    color: #d42426;
                    box-shadow: 0 2px 5px rgba(0,0,0,0.1);
                }

        .delivery-form {
            flex-grow: 1;
        }

            .delivery-form input {
                box-shadow: none !important;
                background: transparent;
            }

            .delivery-form .btn-danger {
                border-radius: 50%;
                width: 40px;
                height: 40px;
                padding: 0;
                display: flex;
                align-items: center;
                justify-content: center;
            }

        .product-card {
            border-radius: 15px;
            overflow: hidden;
            transition: 0.3s;
            background: #fff;
        }

            .product-card:hover {
                transform: translateY(-5px);
                box-shadow: 0 10px 20px rgba(0,0,0,0.1) !important;
            }

            .product-card .card-img-top {
                height: 180px;
                object-fit: cover;
                width: 100%;
            }

        .btn-add-cart {
            background-color: #d42426;
            color: white;
            font-size: 0.85rem;
            padding: 8px 20px;
            font-weight: bold;
        }

            .btn-add-cart:hover {
                background-color: #a81c1e;
                color: white;
            }

        .badge-favorite {
            position: absolute;
            top: 10px;
            left: 10px;
            background: rgba(255,255,255,0.9);
            color: #d42426;
            padding: 5px 10px;
            border-radius: 20px;
            font-size: 0.75rem;
            font-weight: bold;
            box-shadow: 0 2px 5px rgba(0,0,0,0.1);
        }

        .section-title {
            font-family: 'Roboto', sans-serif;
            text-transform: uppercase;
            border-left: 5px solid #ffce44;
            padding-left: 15px;
        }

        @@media (max-width: 768px) {
            .delivery-bar {
                flex-direction: column;
                border-radius: 20px;
            }

            .delivery-tabs {
                margin-right: 0;
                margin-bottom: 10px;
                width: 100%;
                justify-content: center;
            }

            .delivery-form {
                width: 100%;
            }

            #homeCarouselOwl .item img {
                height: 250px;
            }
        }
    </style>
}