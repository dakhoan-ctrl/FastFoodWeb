@model FastFoodWeb.Models.AppUser

@{
    ViewData["Title"] = "Hồ sơ của tôi";
}

<div class="container py-5">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card shadow-lg border-0 rounded-4 overflow-hidden">
                <div class="card-header bg-gradient bg-danger text-white text-center py-4">
                    <div class="mb-3">
                        <img src="https://cdn-icons-png.flaticon.com/512/1144/1144760.png" width="100" class="rounded-circle border border-4 border-white shadow" />
                    </div>
                    <h3 class="fw-bold mb-0">@Model.FullName</h3>
                    <p class="mb-0 opacity-75">@Model.Email</p>
                </div>

                <div class="card-body p-5">
                    <form>
                        <h5 class="text-danger fw-bold border-bottom pb-2 mb-4"><i class="fas fa-user-edit me-2"></i>Thông tin cá nhân</h5>

                        <div class="row g-3">
                            <div class="col-md-6">
                                <label class="form-label fw-bold text-muted">Họ và tên</label>
                                <input type="text" class="form-control bg-light" value="@Model.FullName" readonly>
                            </div>
                            <div class="col-md-6">
                                <label class="form-label fw-bold text-muted">Số điện thoại</label>
                                <input type="text" class="form-control bg-light" value="@(Model.PhoneNumber ?? "Chưa cập nhật")" readonly>
                            </div>
                            <div class="col-12">
                                <label class="form-label fw-bold text-muted">Email đăng nhập</label>
                                <input type="text" class="form-control bg-light" value="@Model.Email" readonly>
                            </div>
                            <div class="col-12">
                                <label class="form-label fw-bold text-muted">Địa chỉ giao hàng mặc định</label>
                                <textarea class="form-control bg-light" rows="2" readonly>@(Model.Address ?? "Chưa cập nhật địa chỉ")</textarea>
                            </div>
                        </div>

                        <div class="mt-5 text-center">
                            <a asp-controller="Home" asp-action="Index" class="btn btn-outline-danger rounded-pill px-4 me-2">
                                <i class="fas fa-arrow-left me-2"></i>Quay lại mua sắm
                            </a>
                            <button type="button" class="btn btn-danger rounded-pill px-4" onclick="alert('Tính năng cập nhật đang phát triển!')">
                                <i class="fas fa-save me-2"></i>Cập nhật hồ sơ
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>