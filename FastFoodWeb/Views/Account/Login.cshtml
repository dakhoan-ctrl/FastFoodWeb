@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Đăng nhập - Jolly Noel</title>
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700&display=swap" rel="stylesheet">

    <style>
        /* --- BẢNG MÀU NOEL --- */
        :root {
            --noel-red: #d42426;
            --noel-dark-red: #a81c1e;
            --noel-gold: #ffce44;
            --snow-white: #ffffff;
            --input-bg: #f3f4f6;
            --text-dark: #1f2937;
            --text-grey: #6b7280;
        }

        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
        }

        body {
            font-family: 'Inter', sans-serif;
            background: linear-gradient(135deg, #fff5f5 0%, #ffe4e6 100%);
            min-height: 100vh;
            display: flex;
            align-items: center;
            justify-content: center;
            padding: 20px;
            line-height: 1.6;
        }

            body::before {
                content: '';
                position: absolute;
                top: 0;
                left: 0;
                right: 0;
                bottom: 0;
                background-image: radial-gradient(#d42426 1px, transparent 1px);
                background-size: 30px 30px;
                opacity: 0.03;
                pointer-events: none;
            }

        .login-container {
            width: 100%;
            max-width: 420px;
            perspective: 1000px;
            z-index: 10;
        }

        .login-card {
            background: var(--snow-white);
            border-radius: 24px;
            padding: 40px;
            box-shadow: 0 10px 40px -10px rgba(212, 36, 38, 0.15);
            border: 1px solid rgba(212, 36, 38, 0.1);
            position: relative;
            overflow: hidden;
        }

            .login-card::before {
                content: '';
                position: absolute;
                top: 0;
                left: 0;
                width: 100%;
                height: 6px;
                background: linear-gradient(90deg, var(--noel-red), var(--noel-gold), var(--noel-red));
            }

        .login-header {
            text-align: center;
            margin-bottom: 32px;
        }

            .login-header h2 {
                color: var(--noel-red);
                font-size: 2rem;
                font-weight: 800;
                margin-bottom: 8px;
                letter-spacing: -0.5px;
            }

            .login-header p {
                color: var(--text-grey);
                font-size: 0.95rem;
            }

        /* --- FORM INPUT --- */
        .form-group {
            margin-bottom: 24px;
            position: relative;
        }

        .input-wrapper {
            position: relative;
            display: flex;
            flex-direction: column;
        }

            .input-wrapper input {
                background: var(--input-bg);
                border: 2px solid transparent;
                border-radius: 12px;
                padding: 16px;
                color: var(--text-dark);
                font-size: 16px;
                font-weight: 500;
                transition: all 0.3s ease;
                width: 100%;
                outline: none;
            }

                .input-wrapper input::placeholder {
                    color: transparent;
                }

            .input-wrapper label {
                position: absolute;
                left: 16px;
                top: 16px;
                color: var(--text-grey);
                font-size: 15px;
                font-weight: 500;
                transition: all 0.2s ease;
                pointer-events: none;
                transform-origin: left top;
            }

            .input-wrapper input:focus, .input-wrapper input:valid {
                background: #fff;
                border-color: var(--noel-red);
                box-shadow: 0 4px 12px rgba(212, 36, 38, 0.1);
            }

                /* Ẩn label khi nhập */
                .input-wrapper input:focus + label,
                .input-wrapper input:not(:placeholder-shown) + label {
                    opacity: 0;
                    visibility: hidden;
                    transform: translateX(10px);
                }

        .error-message {
            display: block;
            color: var(--noel-red);
            font-size: 13px;
            font-weight: 600;
            margin-top: 8px;
            background: #fef2f2;
            padding: 8px 12px;
            border-radius: 8px;
            border-left: 3px solid var(--noel-red);
        }

        .btn {
            background: linear-gradient(135deg, var(--noel-red) 0%, var(--noel-dark-red) 100%);
            border: none;
            border-radius: 12px;
            padding: 16px 24px;
            color: white;
            font-size: 16px;
            font-weight: 700;
            cursor: pointer;
            transition: all 0.3s ease;
            width: 100%;
            margin-bottom: 24px;
            box-shadow: 0 4px 15px rgba(212, 36, 38, 0.3);
            text-transform: uppercase;
            letter-spacing: 0.5px;
        }

            .btn:hover {
                transform: translateY(-2px);
                box-shadow: 0 6px 20px rgba(212, 36, 38, 0.4);
                filter: brightness(1.1);
            }

        /* --- SOCIAL LOGIN CSS --- */
        .divider {
            display: flex;
            align-items: center;
            text-align: center;
            margin: 0 0 24px 0;
            color: var(--text-grey);
            font-size: 13px;
            font-weight: 500;
        }

            .divider::before, .divider::after {
                content: '';
                flex: 1;
                border-bottom: 1px solid #e5e7eb;
            }

            .divider::before {
                margin-right: 12px;
            }

            .divider::after {
                margin-left: 12px;
            }

        .social-login {
            display: flex;
            gap: 12px;
            margin-bottom: 24px;
        }

        .social-btn {
            flex: 1;
            display: flex;
            align-items: center;
            justify-content: center;
            gap: 8px;
            padding: 12px;
            background: #fff;
            border: 1px solid #e5e7eb;
            border-radius: 12px;
            cursor: pointer;
            transition: all 0.2s ease;
            text-decoration: none;
            color: var(--text-dark);
            font-weight: 600;
            font-size: 14px;
        }

            .social-btn:hover {
                background-color: #f9fafb;
                border-color: #d1d5db;
                transform: translateY(-2px);
            }

        .social-icon {
            width: 20px;
            height: 20px;
        }
        /* ------------------------ */

        .form-options {
            display: flex;
            justify-content: space-between;
            align-items: center;
            margin-bottom: 24px;
        }

        .checkbox-label {
            color: var(--text-grey);
            font-size: 14px;
            cursor: pointer;
            display: flex;
            align-items: center;
            gap: 8px;
            font-weight: 500;
        }

        .checkmark {
            width: 18px;
            height: 18px;
            border: 2px solid #e5e7eb;
            border-radius: 4px;
            display: flex;
            align-items: center;
            justify-content: center;
            transition: all 0.2s;
            background: white;
        }

        .remember-wrapper input[type="checkbox"] {
            position: absolute;
            opacity: 0;
            cursor: pointer;
            height: 0;
            width: 0;
            -webkit-appearance: none;
            appearance: none;
        }

            .remember-wrapper input[type="checkbox"]:checked ~ .checkbox-label .checkmark {
                background: var(--noel-red);
                border-color: var(--noel-red);
            }

                .remember-wrapper input[type="checkbox"]:checked ~ .checkbox-label .checkmark::after {
                    content: '✓';
                    color: white;
                    font-size: 11px;
                    font-weight: bold;
                }

        .forgot-password {
            color: var(--noel-red);
            text-decoration: none;
            font-size: 14px;
            font-weight: 600;
        }

        .signup-link {
            text-align: center;
        }

            .signup-link p {
                color: var(--text-grey);
                font-size: 14px;
            }

            .signup-link a {
                color: var(--noel-red);
                text-decoration: none;
                font-weight: 700;
            }

                .signup-link a:hover {
                    text-decoration: underline;
                }

        .password-toggle {
            position: absolute;
            right: 12px;
            top: 50%;
            transform: translateY(-50%);
            background: none;
            border: none;
            cursor: pointer;
            padding: 8px;
            z-index: 2;
        }

        .eye-icon {
            display: block;
            width: 20px;
            height: 20px;
            background-image: url("data:image/svg+xml,%3csvg xmlns='http://www.w3.org/2000/svg' fill='none' viewBox='0 0 24 24' stroke='%23a81c1e' stroke-width='1.5'%3e%3cpath stroke-linecap='round' stroke-linejoin='round' d='M15 12a3 3 0 11-6 0 3 3 0 016 0z'/%3e%3cpath stroke-linecap='round' stroke-linejoin='round' d='M2.458 12C3.732 7.943 7.523 5 12 5c4.478 0 8.268 2.943 9.542 7-1.274 4.057-5.064 7-9.542 7-4.477 0-8.268-2.943-9.542-7z'/%3e%3c/svg%3e");
            background-size: contain;
            background-repeat: no-repeat;
            opacity: 0.7;
            transition: opacity 0.3s;
        }

            .eye-icon:hover {
                opacity: 1;
            }

            .eye-icon.show-password {
                background-image: url("data:image/svg+xml,%3csvg xmlns='http://www.w3.org/2000/svg' fill='none' viewBox='0 0 24 24' stroke='%23a81c1e' stroke-width='1.5'%3e%3cpath stroke-linecap='round' stroke-linejoin='round' d='M3.98 8.223A10.477 10.477 0 001.934 12C3.226 16.338 7.244 19.5 12 19.5c.993 0 1.953-.138 2.863-.395M6.228 6.228A10.45 10.45 0 0112 4.5c4.756 0 8.773 3.162 10.065 7.498a10.523 10.523 0 01-4.293 5.774M6.228 6.228L3 3m3.228 3.228l3.65 3.65m7.894 7.894L21 21m-3.228-3.228l-3.65-3.65m0 0a3 3 0 11-4.243-4.243m4.242 4.242L9.88 9.88'/%3e%3c/svg%3e");
            }

        @@media (max-width: 480px) {
            .login-card {
                padding: 24px;
                border-radius: 20px;
            }

            .login-header h2 {
                font-size: 1.75rem;
            }

            .form-options {
                flex-direction: column;
                align-items: flex-start;
                gap: 16px;
            }
        }
    </style>
</head>
<body>
    <div class="login-container">
        <div class="login-card">
            <div class="login-header">
                <h2>Welcome to Jolly! 🎄</h2>
                <p>Đăng nhập để nhận ưu đãi Giáng sinh</p>
            </div>

            <form asp-controller="Account" asp-action="Login" method="post">

                @* --- DÒNG QUAN TRỌNG ĐƯỢC THÊM VÀO: Giữ lại link cần quay về --- *@
                <input type="hidden" name="returnUrl" value="@ViewData["ReturnUrl"]" />
                @* ---------------------------------------------------------------- *@

                @if (!ViewData.ModelState.IsValid)
                {
                    <div class="error-message">@Html.ValidationSummary(false)</div>
                }

                <div class="form-group">
                    <div class="input-wrapper">
                        <input type="text" id="email" name="email" required autocomplete="off" placeholder=" ">
                        <label for="email">Email Address</label>
                    </div>
                </div>

                <div class="form-group">
                    <div class="input-wrapper password-wrapper">
                        <input type="password" id="password" name="password" required placeholder=" ">
                        <label for="password">Password</label>
                        <button type="button" class="password-toggle" onclick="togglePassword()">
                            <i class="eye-icon"></i>
                        </button>
                    </div>
                </div>

                <div class="form-options">
                    <label class="remember-wrapper">
                        <input type="checkbox" name="rememberMe">
                        <span class="checkbox-label">
                            <span class="checkmark"></span> Ghi nhớ đăng nhập
                        </span>
                    </label>
                    <a href="#" class="forgot-password">Quên mật khẩu?</a>
                </div>

                <button type="submit" class="btn login-btn">Đăng nhập ngay</button>

                <div class="divider"><span>Hoặc đăng nhập bằng</span></div>

                @* Phần Login Google/Facebook giữ nguyên *@
                <form asp-controller="Account" asp-action="ExternalLogin" method="post">
                    <div class="social-login">
                        <button type="submit" name="provider" value="Google" class="social-btn" title="Đăng nhập bằng Google">
                            <img src="https://www.svgrepo.com/show/475656/google-color.svg" class="social-icon" alt="Google">
                            Google
                        </button>
                        <button type="submit" name="provider" value="Facebook" class="social-btn" title="Đăng nhập bằng Facebook">
                            <img src="https://www.svgrepo.com/show/475647/facebook-color.svg" class="social-icon" alt="Facebook">
                            Facebook
                        </button>
                    </div>
                </form>
                <div class="signup-link">
                    <p>Bạn chưa là thành viên? <a asp-controller="Account" asp-action="Register" asp-route-returnUrl="@ViewData["ReturnUrl"]">Đăng ký tài khoản mới</a></p>
                </div>
            </form>
        </div>
    </div>

    <script>
        function togglePassword() {
            const passwordInput = document.getElementById('password');
            const eyeIcon = document.querySelector('.eye-icon');
            if (passwordInput.type === 'password') {
                passwordInput.type = 'text'; eyeIcon.classList.add('show-password');
            } else {
                passwordInput.type = 'password'; eyeIcon.classList.remove('show-password');
            }
        }
    </script>
</body>
</html>