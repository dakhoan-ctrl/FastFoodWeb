@model IEnumerable<FastFoodWeb.Models.Product>

@{
    ViewData["Title"] = "Quản lý thực đơn";
}

<div class="container mt-4 mb-5">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2 class="text-danger fw-bold"><i class="fas fa-hamburger"></i> QUẢN LÝ THỰC ĐƠN</h2>
        <a asp-action="Create" class="btn btn-success fw-bold px-4 rounded-pill shadow-sm">
            <i class="fas fa-plus-circle"></i> THÊM MÓN ĂN MỚI
        </a>
    </div>

    <div class="card shadow-sm border-0 mb-4" style="border-radius: 15px;">
        <div class="card-body p-3">
            <form asp-action="Index" method="get" class="row g-2 align-items-center">
                <div class="col-md-10">
                    <div class="input-group">
                        <span class="input-group-text bg-white border-end-0 text-muted">
                            <i class="fas fa-search"></i>
                        </span>
                        <input type="text" name="searchString" class="form-control border-start-0 ps-0"
                               placeholder="Tìm kiếm theo tên món ăn (ví dụ: gà quay, mì ý...)"
                               value="@ViewBag.CurrentSearch">
                    </div>
                </div>
                <div class="col-md-2 d-grid">
                    <button type="submit" class="btn btn-danger fw-bold rounded-pill">TÌM KIẾM</button>
                </div>
            </form>

            @if (!string.IsNullOrEmpty(ViewBag.CurrentSearch))
            {
                <div class="mt-2 small text-muted">
                    <i class="fas fa-info-circle"></i> Đang hiển thị kết quả cho: <b class="text-danger">"@ViewBag.CurrentSearch"</b>
                    <a asp-action="Index" class="text-decoration-none ms-2 text-dark fw-bold">| Xóa lọc</a>
                </div>
            }
        </div>
    </div>

    <div class="card shadow border-0" style="border-radius: 15px; overflow: hidden;">
        <div class="table-responsive">
            <table class="table table-hover align-middle mb-0">
                <thead class="table-danger">
                    <tr>
                        <th class="ps-3">Hình ảnh</th>
                        <th>Tên món ăn</th>
                        <th>Giá tiền</th>
                        <th>Danh mục</th>
                        <th class="text-center">Thao tác</th>
                    </tr>
                </thead>
                <tbody>
                    @if (Model != null && Model.Any())
                    {
                        foreach (var item in Model)
                        {
                            <tr>
                                <td class="ps-3">
                                    <img src="@item.ImageUrl" width="60" height="60" class="rounded shadow-sm" style="object-fit: cover;"
                                         onerror="this.src='/images/no-image.png'" />
                                </td>
                                <td class="fw-bold">@item.Name</td>
                                <td class="text-danger fw-bold">@item.Price.ToString("N0") đ</td>
                                <td><span class="badge bg-info text-dark px-3 py-2">@item.Category?.Name</span></td>
                                <td class="text-center">
                                    <div class="btn-group" role="group">
                                        <a asp-action="Edit" asp-route-id="@item.ProductId" class="btn btn-sm btn-warning text-white px-3">
                                            <i class="fas fa-edit"></i> Sửa
                                        </a>
                                        <a asp-action="Delete" asp-route-id="@item.ProductId" class="btn btn-sm btn-danger px-3"
                                           onclick="return confirm('Bạn có chắc chắn muốn xóa món này không?')">
                                            <i class="fas fa-trash"></i> Xóa
                                        </a>
                                    </div>
                                </td>
                            </tr>
                        }
                    }
                    else
                    {
                        <tr>
                            <td colspan="5" class="text-center py-5 text-muted">
                                <i class="fas fa-search mb-2" style="font-size: 2rem;"></i>
                                <p>Không tìm thấy món ăn nào khớp với từ khóa của bạn.</p>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>

@section Scripts {
    <style>
        .table thead th {
            border-bottom: none;
            padding: 15px 10px;
        }

        .btn-group .btn {
            border-radius: 5px;
            margin: 0 2px;
        }
    </style>
}