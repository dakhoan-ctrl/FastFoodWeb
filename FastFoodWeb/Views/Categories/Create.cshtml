@model FastFoodWeb.Models.Category

<div class="container mt-4">
    <h3>THÊM DANH MỤC MỚI</h3>
    <hr />
    <form asp-action="Create" class="col-md-4">
        <div class="form-group mb-3">
            <label class="control-label">Tên danh mục (Ví dụ: Pizza, Burger...)</label>
            <input asp-for="Name" class="form-control" required />
        </div>
        <button type="submit" class="btn btn-primary">Lưu lại</button>
        <a href="/Categories/Index" class="btn btn-secondary">Quay lại</a>
    </form>
</div>