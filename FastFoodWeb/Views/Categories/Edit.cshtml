@model FastFoodWeb.Models.Category

<div class="container mt-5">
    <h3>CHỈNH SỬA DANH MỤC</h3>
    <hr />
    <form asp-action="Edit" class="col-md-6">
        <input type="hidden" asp-for="CategoryId" />

        <div class="mb-4">
            <label class="form-label fw-bold">Tên danh mục</label>
            <input asp-for="Name" class="form-control" />
        </div>

        <div class="mb-4">
            <label class="form-label fw-bold">Chọn Icon:</label>
            <div class="d-flex flex-wrap gap-2">
                @{
                    var icons = new List<string> { 
                         "fas fa-utensils", "fas fa-drumstick-bite", "fas fa-hamburger", 
                         "fas fa-pizza-slice", "fas fa-bacon", "fas fa-ice-cream", 
                         "fas fa-cocktail", "fas fa-coffee", "fas fa-bread-slice", 
                         "fas fa-fish", "fas fa-carrot", "fas fa-pepper-hot"
                    };
                }
                
                @foreach (var icon in icons)
                {
                    <input type="radio" class="btn-check" name="Icon" id="edit_icon_@icon" value="@icon" autocomplete="off" 
                           @(Model.Icon == icon ? "checked" : "")> <label class="btn btn-outline-danger" for="edit_icon_@icon">
                        <i class="@icon fa-lg"></i>
                    </label>
                }
            </div>
        </div>

        <button type="submit" class="btn btn-warning">Lưu thay đổi</button>
        <a asp-action="Index" class="btn btn-secondary">Quay lại</a>
    </form>
</div>