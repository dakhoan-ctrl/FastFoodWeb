@model IEnumerable<FastFoodWeb.Models.Category>

@{
    ViewData["Title"] = "Quản lý Danh mục";
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <h2 class="text-danger fw-bold">📂 QUẢN LÝ DANH MỤC</h2>
    <a asp-action="Create" class="btn btn-success fw-bold">➕ Thêm danh mục mới</a>
</div>

<div class="table-responsive shadow-sm rounded">
    <table class="table table-hover align-middle bg-white">
        <thead class="table-danger">
            <tr>
                <th>ID</th>
                <th>Tên danh mục</th>
                <th class="text-center">Thao tác</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.CategoryId</td>
                    <td class="fw-bold">@item.Name</td>
                    <td class="text-center">
                        <a asp-action="Edit" asp-route-id="@item.CategoryId" class="btn btn-sm btn-warning">Sửa</a>
                        <a asp-action="Delete" asp-route-id="@item.CategoryId" class="btn btn-sm btn-danger">Xóa</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>