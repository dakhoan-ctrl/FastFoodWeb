@using Microsoft.AspNetCore.Identity
@inject SignInManager<IdentityUser> SignInManager
@inject UserManager<IdentityUser> UserManager

<ul class="navbar-nav d-flex flex-row align-items-center">
    @if (SignInManager.IsSignedIn(User))
    {
        <li class="nav-item">
            @* Dòng chữ xin chào màu trắng, đậm để nổi bật trên nền đỏ *@
            <span class="nav-link welcome-text text-white fw-bold me-2">
                Xin chào, @(User.Identity?.Name)!
            </span>
        </li>
        <li class="nav-item">
            <form id="logoutForm" class="form-inline" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Action("Index", "Home", new { area = "" })">
                @* Nút đăng xuất: Nền trắng, chữ đỏ, bo tròn, có viền vàng *@
                <button id="logout" type="submit" class="btn btn-light text-danger fw-bold shadow-sm px-4"
                        style="border-radius: 20px; border: 2px solid #ffce44; transition: 0.3s;">
                    Đăng xuất
                </button>
            </form>
        </li>
    }
    else
    {
        <li class="nav-item">
            <a class="nav-link text-white fw-bold" id="register" asp-area="Identity" asp-page="/Account/Register">Đăng ký</a>
        </li>
        <li class="nav-item">
            <a class="nav-link text-white fw-bold" id="login" asp-area="Identity" asp-page="/Account/Login">Đăng nhập</a>
        </li>
    }
</ul>

<style>
    /* Hiệu ứng khi di chuột vào nút Đăng xuất */
    #logout:hover {
        background-color: #ffce44 !important; /* Đổi sang màu vàng kim */
        color: #d42426 !important; /* Chữ đỏ đậm */
        transform: scale(1.05);
        box-shadow: 0 0 10px #ffffff;
    }
</style>